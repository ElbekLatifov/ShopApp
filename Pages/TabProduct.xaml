<UserControl x:Class="ShopSystem.Pages.TabProduct"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShopSystem.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100" Margin="10" MouseLeftButtonDown="UserControl_MouseLeftButtonDown">
    <Grid>
        <Label x:Name="product_id" Visibility="Hidden"/>
        <Border Height="70" VerticalAlignment="Top" CornerRadius="5 5 0 0" Background="White" BorderThickness="1 1 1 0" BorderBrush="Black">
            <Image Source="/Images/meat.jfif" Stretch="Fill" Width="90" Height="70"/>
        </Border>
        <Border Background="Transparent" VerticalAlignment="Bottom" Height="30" BorderBrush="Black" BorderThickness="1 0 1 1">
            <TextBlock x:Name="product_name" Text="non" Background="LightCyan" TextAlignment="Center" FontFamily="times new roman" Padding="0" FontSize="18"/>
        </Border>
    </Grid>
</UserControl>
