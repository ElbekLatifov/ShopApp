<Window x:Class="ShopSystem.Pages.AddCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopSystem.Pages"           
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="AddCategory" Height="450" Width="300"
        WindowStartupLocation="CenterOwner" KeyDown="Window_KeyDown">
    <Grid>
        <StackPanel Height=" 300" Width="250">
            <TextBox md:HintAssist.Hint="название категории" md:HintAssist.IsFloating="True" x:Name="categoryName_txt" Margin="0 50 0 0" Height="50" FontSize="15" PreviewTextInput="categoryName_txt_PreviewTextInput" VerticalContentAlignment="Bottom"/>
            <Button Margin="10 70" Content="Create" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
